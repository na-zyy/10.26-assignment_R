atan(1/1:100) #slight1 练习1(1)

x <- c(1:1000)
atan(1/x)
y <- atan(1/x)
y
q <- 1/(tan(y))
z <- q
z  #slight1 练习1(2)

x == z
identical(x,z)
all.equal(x,z)  
x -> a
a -> z
all.equal(x,z)
all.equal(x,z,0)
isTRUE(x==z)
isTRUE(identical(x,z))
isTRUE(all.equal(x,z))   
isTRUE(all.equal(x,z,0))  #slight1 练习2

